<Window x:Class="RightTriangleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RightTriangle Operations" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Ввод для первого треугольника -->
        <GroupBox Header="Треугольник 1" Grid.Column="0" Margin="5">
            <StackPanel>
                <TextBlock Text="Катет a:" />
                <TextBox Name="TextBoxA1" Margin="0,0,0,10" />
                <TextBlock Text="Катет b:" />
                <TextBox Name="TextBoxB1" Margin="0,0,0,10" />
            </StackPanel>
        </GroupBox>

        <!-- Ввод для второго треугольника -->
        <GroupBox Header="Треугольник 2" Grid.Column="1" Margin="5">
            <StackPanel>
                <TextBlock Text="Катет a:" />
                <TextBox Name="TextBoxA2" Margin="0,0,0,10" />
                <TextBlock Text="Катет b:" />
                <TextBox Name="TextBoxB2" Margin="0,0,0,10" />
            </StackPanel>
        </GroupBox>

        <!-- Кнопка для выполнения операций -->
        <Button Content="Выполнить операции" Grid.ColumnSpan="2" Margin="5" Height="30" VerticalAlignment="Bottom" Click="OnExecuteClick" />

        <!-- Вывод результатов -->
        <TextBox Name="TextBoxOutput" Grid.ColumnSpan="2" Margin="5,150,5,40" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap" />
    </Grid>
</Window>
