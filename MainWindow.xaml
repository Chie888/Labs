<Window x:Class="RightTriangleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RightTriangle Operations" Height="500" Width="800" MinWidth="700" MinHeight="450">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Кнопка сравнения -->
            <RowDefinition Height="*" />
            <!-- Основной контент -->
        </Grid.RowDefinitions>

        <!-- Кнопка сравнения сверху справа -->
        <Button Grid.Column="1" Grid.Row="0" Content="Сравнить треугольники" Height="40" Margin="5" HorizontalAlignment="Left" Width="200" Click="ButtonCompare_Click" />

        <!-- Левая панель с вводом и кнопками -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Stretch" >

            <!-- Треугольник 1 -->
            <GroupBox Header="Треугольник 1" Margin="0,0,0,10" Height="220">
                <StackPanel Margin="5">
                    <TextBlock Text="Катет a:" />
                    <TextBox Name="TextBoxA1" Margin="0,0,0,8" />
                    <TextBlock Text="Катет b:" />
                    <TextBox Name="TextBoxB1" Margin="0,0,0,8" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8" >
                        <Button Content="++ Увеличить" Width="110" Margin="5" Click="ButtonInc1_Click" />
                        <Button Content="-- Уменьшить" Width="110" Margin="5" Click="ButtonDec1_Click" />
                    </StackPanel>

                    <Button Content="Показать площадь и состояние" Margin="5,0,5,0" Click="ButtonShow1_Click" />
                </StackPanel>
            </GroupBox>

            <!-- Треугольник 2 -->
            <GroupBox Header="Треугольник 2" Height="220">
                <StackPanel Margin="5">
                    <TextBlock Text="Катет a:" />
                    <TextBox Name="TextBoxA2" Margin="0,0,0,8" />
                    <TextBlock Text="Катет b:" />
                    <TextBox Name="TextBoxB2" Margin="0,0,0,8" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8" >
                        <Button Content="++ Увеличить" Width="110" Margin="5" Click="ButtonInc2_Click" />
                        <Button Content="-- Уменьшить" Width="110" Margin="5" Click="ButtonDec2_Click" />
                    </StackPanel>

                    <Button Content="Показать площадь и состояние" Margin="5,0,5,0" Click="ButtonShow2_Click" />
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <!-- Правая панель с выводом -->
        <TextBox Grid.Column="1" Grid.Row="1" Name="TextBoxOutput" Margin="5" 
                 VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap" 
                 FontFamily="Consolas" FontSize="14" />
    </Grid>
</Window>
